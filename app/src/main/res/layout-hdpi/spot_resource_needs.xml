<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/recovery"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="left"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:orientation="horizontal">


        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/ripple"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:background="#ffffff">

            <ImageButton
                android:id="@+id/bckbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:background="@mipmap/back"

                />

        </com.balysv.materialripple.MaterialRippleLayout>

    </LinearLayout>


    <LinearLayout

        android:id="@+id/liner2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/loc_but"
            android:layout_width="85dp"
            android:layout_height="35dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="15dp"
            android:background="@drawable/button_bg3"
            android:drawableLeft="@mipmap/location"
            android:drawablePadding="5dp"
            android:paddingLeft="6dp"
            android:paddingRight="5dp"
            android:text="Location"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />


        <FrameLayout
            android:id="@+id/frme_lyt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp">

            <TextView
                android:id="@+id/tltlg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="14dp"
                android:text="Latitude &amp; Longitude Results"
                android:textColor="#8b8b8b"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/latlongt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="15dp"
                android:text=""
                android:textColor="#232323"
                android:textSize="11sp">

                <requestFocus />
            </TextView>

            <View
                android:layout_width="205dp"
                android:layout_height="0.5dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="52dp"
                android:background="#8b8b8b" />
        </FrameLayout>


    </LinearLayout>



    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="60dp">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:padding="5dp">


            <!--        <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/namem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="5dp"
                        android:hint="Name"
                        android:singleLine="true"
                        android:textSize="22sp"
                        app:met_clearButton="true"
                        app:met_floatingLabel="normal"
                        app:met_floatingLabelTextSize="13sp"
                        app:met_textColor="#616161"
                        app:met_textColorHint="#9e9e9e" />-->

            <com.rey.material.widget.EditText
                android:id="@+id/namem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:hint="Name"
                android:singleLine="true"
                android:textColor="#FF424242"
                android:textSize="19sp"
                app:et_dividerColor="#9e9e9e"
                app:et_dividerHeight="1dp"
                app:et_dividerPadding="2dp"
                app:et_labelEnable="true"
                app:et_labelTextColor="#9e9e9e"
                app:et_labelTextSize="14sp"
                app:et_supportSingleLine="true" />


            <!--       <com.rengwuxian.materialedittext.MaterialEditText
                       android:id="@+id/locatm"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="20dp"
                       android:layout_marginRight="20dp"
                       android:layout_marginTop="5dp"
                       android:hint="Location"
                       android:singleLine="true"
                       android:textSize="22sp"
                       app:met_clearButton="true"
                       app:met_floatingLabel="normal"
                       app:met_floatingLabelTextSize="13sp"
                       app:met_textColor="#616161"
                       app:met_textColorHint="#9e9e9e" />-->

            <com.rey.material.widget.EditText
                android:id="@+id/locatm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:hint="Location"
                android:singleLine="true"
                android:textColor="#FF424242"
                android:textSize="19sp"
                app:et_dividerColor="#9e9e9e"
                app:et_dividerHeight="1dp"
                app:et_dividerPadding="2dp"
                app:et_labelEnable="true"
                app:et_labelTextColor="#9e9e9e"
                app:et_labelTextSize="14sp"
                app:et_supportSingleLine="true" />

            <!--        <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/landm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="5dp"
                        android:hint="LandMark"
                        android:singleLine="true"
                        android:textSize="22sp"
                        app:met_clearButton="true"
                        app:met_floatingLabel="normal"
                        app:met_floatingLabelTextSize="13sp"
                        app:met_textColor="#616161"
                        app:met_textColorHint="#9e9e9e" />-->


            <com.rey.material.widget.EditText
                android:id="@+id/landm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:hint="Landmark"
                android:singleLine="true"
                android:textColor="#FF424242"
                android:textSize="19sp"
                app:et_dividerColor="#9e9e9e"
                app:et_dividerHeight="1dp"
                app:et_dividerPadding="2dp"
                app:et_labelEnable="true"
                app:et_labelTextColor="#9e9e9e"
                app:et_labelTextSize="14sp"
                app:et_supportSingleLine="true" />

            <!--        <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/cont"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="5dp"
                        android:hint="Contact No"
                        android:inputType="number"
                        android:singleLine="true"
                        android:textSize="22sp"
                        app:met_clearButton="true"
                        app:met_floatingLabel="normal"
                        app:met_floatingLabelTextSize="13sp"
                        app:met_textColor="#616161"
                        app:met_textColorHint="#9e9e9e" />-->


            <com.rey.material.widget.EditText
                android:id="@+id/cont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:hint="Contact No"
                android:inputType="number"
                android:maxLength="10"
                android:singleLine="true"
                android:textColor="#FF424242"
                android:textSize="19sp"
                app:et_dividerColor="#9e9e9e"
                app:et_dividerHeight="1dp"
                app:et_dividerPadding="2dp"
                app:et_labelEnable="true"
                app:et_labelTextColor="#9e9e9e"
                app:et_labelTextSize="14sp"
                app:et_supportSingleLine="true" />


            <!--        <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/tagm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="5dp"
                        android:hint="#HashTag"
                        android:singleLine="true"
                        android:textSize="22sp"
                        app:met_clearButton="true"
                        app:met_floatingLabel="normal"
                        app:met_floatingLabelTextSize="13sp"
                        app:met_textColor="#616161"
                        app:met_textColorHint="#9e9e9e" />-->


            <com.rey.material.widget.EditText
                android:id="@+id/tagm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:hint="#Hashtag"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:textColor="#FF424242"
                android:textSize="19sp"
                app:et_autoCompleteMode="single"
                app:et_dividerColor="#9e9e9e"
                app:et_dividerHeight="1dp"
                app:et_dividerPadding="2dp"
                app:et_labelEnable="true"
                app:et_labelTextColor="#9e9e9e"
                app:et_labelTextSize="12sp" />


            <TextView
                android:id="@+id/typed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="Type of Resource"
                android:textColor="#e64a19" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="0dp"
                    android:paddingTop="3dp"
                    android:layout_height="55dp"
                    android:layout_weight="1">

                    <requestFocus />

                    <!-- <Spinner
                         android:id="@+id/spinner"
                         android:layout_width="fill_parent"
                         android:layout_height="55dp"
                         android:background="#FFFFFF"
                         android:dropDownSelector="#1a237e"
                         android:gravity="center_vertical"
                         android:popupBackground="#FFFFFF"
                         android:spinnerMode="dropdown" />-->

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="25dp"
                        android:layout_height="20dp"
                        android:layout_gravity="top|right"
                        android:layout_marginTop="10dp"
                        android:background="@mipmap/down" />

                    <Button
                        android:id="@+id/select_resource"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:gravity="left"
                        android:paddingBottom="10dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="15dp"
                        android:paddingTop="5dp"
                        android:text="None Selected"
                        android:textColor="#FF424242"
                        android:textSize="17sp" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="45dp"
                        android:background="#9e9e9e" />

                </FrameLayout>
            </LinearLayout>


            <Button
                android:id="@+id/send"
                android:layout_width="125dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="70dp"
                android:layout_marginTop="30dp"
                android:background="#212121"
                android:drawableLeft="@mipmap/arrow"
                android:drawablePadding="15dp"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:text="Send"
                android:textColor="#ffffff"
                android:textSize="20sp" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>