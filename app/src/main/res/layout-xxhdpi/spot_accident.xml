            <com.rey.material.widget.EditText
                android:id="@+id/tagm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:hint="#Hashtag"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:textColor="#FF424242"
                android:textSize="21sp"
                app:et_autoCompleteMode="single"
                app:et_dividerColor="#9e9e9e"
                app:et_dividerHeight="1dp"
                app:et_dividerPadding="2dp"
                app:et_labelEnable="true"
                app:et_labelTextColor="#9e9e9e"
                app:et_labelTextSize="13sp" />





            <!--     <com.rengwuxian.materialedittext.MaterialEditText
                     android:id="@+id/contm"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_marginLeft="20dp"
                     android:layout_marginRight="20dp"
                     android:layout_marginTop="2dp"
                     android:hint="Contact"
                     android:singleLine="true"
                     android:textSize="22sp"
                     app:met_clearButton="true"
                     app:met_floatingLabel="normal"
                     app:met_floatingLabelTextSize="13sp"
