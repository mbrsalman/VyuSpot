<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/accident"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="left"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/ripple"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:background="#ffffff">

            <ImageButton
                android:id="@+id/bckbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:background="@mipmap/back"

                />

        </com.balysv.materialripple.MaterialRippleLayout>

    </LinearLayout>

    <LinearLayout

        android:id="@+id/liner2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/loc_but"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="20dp"
            android:background="#e64a19"
            android:drawableLeft="@mipmap/location"
            android:drawablePadding="5dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:text="Location"
            android:textColor="#FFFFFF"
            android:textSize="17sp" />


        <FrameLayout
            android:id="@+id/frme_lyt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp">

            <TextView
                android:id="@+id/lattx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:layout_marginLeft="14dp"
                android:text="Latitude &amp; Longitude Results"
                android:textColor="#8b8b8b"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/latlongt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="15dp"
                android:text=""
                android:textColor="#232323"
                android:textSize="13sp">

                <requestFocus />
            </TextView>

            <View
                android:layout_width="205dp"
                android:layout_height="0.5dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="52dp"
                android:background="#8b8b8b" />
        </FrameLayout>


    </LinearLayout>


    <ScrollView
        android:id="@+id/scrooll"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="60dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">


            <!--
