<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@mipmap/emergency"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_gravity="left"
            android:background="#ffffff"
            android:orientation="horizontal">

            <com.balysv.materialripple.MaterialRippleLayout
                android:id="@+id/ripple"
                android:layout_width="80dp"
                android:layout_height="fill_parent"
                android:background="#ffffff">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:background="@mipmap/back"

                    />

            </com.balysv.materialripple.MaterialRippleLayout>

        </LinearLayout>

        <LinearLayout

            android:id="@+id/liner2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/loc_but"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="20dp"
                android:background="@drawable/button_bg3"
                android:drawableLeft="@mipmap/location"
                android:drawablePadding="5dp"
                android:paddingLeft="6dp"
                android:paddingRight="5dp"
                android:text="Location"
                android:textColor="#FFFFFF"
                android:textSize="17sp" />


            <FrameLayout
                android:id="@+id/frme_lyt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp">

                <TextView
                    android:id="@+id/tltlg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|left"
                    android:layout_marginLeft="14dp"
                    android:text="Latitude &amp; Longitude Results"
                    android:textColor="#8b8b8b"
                    android:textSize="9sp" />

                <TextView
                    android:id="@+id/latlongt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="15dp"
                    android:text=""
                    android:textColor="#232323"
                    android:textSize="13sp">

                    <requestFocus />
                </TextView>

                <View
                    android:layout_width="205dp"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="52dp"
                    android:background="#8b8b8b" />
            </FrameLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="75dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="1">


                <com.rey.material.widget.Spinner
                    android:id="@+id/spinner"
                    style="@style/Material.Widget.Spinner"
                    spn_labelTextSize="22sp"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:paddingBottom="2dp"
                    android:paddingTop="5dp"
                    android:popupBackground="#f5f5f5"
                    android:textColor="#FF616161"
                    android:textSize="22sp"
                    app:rd_style="@style/Material.Drawable.Ripple.Wave"
                    app:spn_arrowSize="0dp"
                    app:spn_dividerColor="#9e9e9e"
                    app:spn_dividerHeight="1dp"
                    app:spn_label="Type of Emergency"
                    app:spn_labelEnable="true"
                    app:spn_labelTextColor="#e64b1b" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:layout_gravity="top|right"
                    android:layout_marginTop="40dp"
                    android:background="@mipmap/down" />


            </FrameLayout>
        </LinearLayout>


        <com.rey.material.widget.EditText
            android:id="@+id/locationm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:hint="Location"
            android:singleLine="true"
            android:textColor="#424242"
            android:textSize="21sp"
            app:et_dividerColor="#9e9e9e"
            app:et_dividerHeight="1dp"
            app:et_dividerPadding="2dp"
            app:et_labelEnable="true"
            app:et_labelTextColor="#9e9e9e"
            app:et_labelTextSize="12sp" />




        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp">


            <TextView
                android:id="@+id/leveltext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="15dp"
                android:text="Water Level in feet (appprox...)"
                android:textColor="#e75122" />


            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginTop="40dp">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal">


                    <Button
                        android:id="@+id/b1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:padding="5dp"
                        android:background="@drawable/btnsel"
                        android:text="1"
                        android:textColor="#ffffff"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/b2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:padding="5dp"
                        android:background="@drawable/btnsel"
                        android:text="2"
                        android:textColor="#ffffff"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/b3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:padding="5dp"
                        android:background="@drawable/btnsel"
                        android:text="3"
                        android:textColor="#ffffff"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/b4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="6dp"
                        android:padding="5dp"
                        android:background="@drawable/btnsel"
                        android:text="4"
                        android:textColor="#ffffff"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/b5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="6dp"
                        android:background="#4b4b4b"
                        android:text="5"
                        android:textColor="#ffffff"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/b6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:background="#4b4b4b"
                        android:text="6"
                        android:textColor="#ffffff"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/b7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:background="#4b4b4b"
                        android:text="7"
                        android:textColor="#ffffff"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/b8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:background="#4b4b4b"
                        android:text="8"
                        android:textColor="#ffffff"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/b9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:background="#4b4b4b"
                        android:text="9"
                        android:textColor="#ffffff"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/b10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:background="#4b4b4b"
                        android:text="10"
                        android:textColor="#ffffff"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/b11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:background="#4b4b4b"
                        android:text="11"
                        android:textColor="#ffffff"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/b12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="35dp"
                        android:background="#4b4b4b"
                        android:text="12"
                        android:textColor="#ffffff"
                        android:textSize="15sp" />




                </LinearLayout>

            </HorizontalScrollView>
        </FrameLayout>


        <com.rey.material.widget.EditText
            android:id="@+id/hashtagm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:hint="#Hashtag"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:textColor="#FF424242"
            android:textSize="21sp"
            app:et_autoCompleteMode="single"
            app:et_dividerColor="#9e9e9e"
            app:et_dividerHeight="1dp"
            app:et_dividerPadding="2dp"
            app:et_labelEnable="true"
            app:et_labelTextColor="#9e9e9e"
            app:et_labelTextSize="13sp" />
        <requestFocus />

        <com.andexert.library.RippleView
            android:id="@+id/more"
            rv_centered="true"
            android:layout_width="140dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="45dp">

            <Button
                android:id="@+id/send"
                android:layout_width="140dp"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:background="#212121"
                android:drawableLeft="@mipmap/arrow"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:text="Send"
                android:textColor="#ffffff"
                android:textSize="22sp" />

        </com.andexert.library.RippleView>


    </LinearLayout>
</LinearLayout>