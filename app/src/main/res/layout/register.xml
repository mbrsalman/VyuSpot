<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/register"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_gravity="left"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/ripple"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:background="#ffffff">

            <ImageButton
                android:id="@+id/bckbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:background="@mipmap/back"

                />

        </com.balysv.materialripple.MaterialRippleLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:text="* required to filled" />


    <com.rey.material.widget.EditText
        android:id="@+id/namem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"

        android:hint="Name *"
        android:inputType="textPersonName"
        android:singleLine="true"
        android:textColor="#424242"
        android:textSize="21sp"
        app:et_dividerColor="#9e9e9e"
        app:et_dividerHeight="1dp"
        app:et_dividerPadding="2dp"
        app:et_labelEnable="true"
        app:et_labelTextColor="#9e9e9e"
        app:et_labelTextSize="12sp" />


    <com.rey.material.widget.EditText
        android:id="@+id/contac"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:hint="Contact Number *"
        android:inputType="phone"
        android:maxLength="10"
        android:singleLine="true"
        android:textColor="#424242"
        android:textSize="21sp"
        app:et_dividerColor="#9e9e9e"
        app:et_dividerHeight="1dp"
        app:et_dividerPadding="2dp"
        app:et_labelEnable="true"
        app:et_labelTextColor="#9e9e9e"
        app:et_labelTextSize="12sp" />

    <com.rey.material.widget.EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:hint="Email Id *"
        android:inputType="textEmailAddress"
        android:singleLine="true"
        android:textColor="#424242"
        android:textSize="21sp"
        app:et_dividerColor="#9e9e9e"
        app:et_dividerHeight="1dp"
        app:et_dividerPadding="2dp"
        app:et_labelEnable="true"
        app:et_labelTextColor="#9e9e9e"
        app:et_labelTextSize="12sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <com.rey.material.widget.EditText
                android:id="@+id/emu1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:hint="Emergency Contact *"
                android:inputType="phone"
                android:maxLength="10"
                android:singleLine="true"
                android:textColor="#424242"
                android:textSize="21sp"
                app:et_dividerColor="#9e9e9e"
                app:et_dividerHeight="1dp"
                app:et_dividerPadding="2dp"
                app:et_labelEnable="true"
                app:et_labelTextColor="#9e9e9e"
                app:et_labelTextSize="12sp" />

            <ImageButton
                android:id="@+id/cont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                android:background="@mipmap/conts" />

        </FrameLayout>

    </LinearLayout>

    <com.rey.material.widget.EditText
        android:id="@+id/emu2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:hint="Emergency Email *"
        android:inputType="textEmailAddress"
        android:singleLine="true"
        android:textColor="#424242"
        android:textSize="21sp"
        app:et_dividerColor="#9e9e9e"
        app:et_dividerHeight="1dp"
        app:et_dividerPadding="2dp"
        app:et_labelEnable="true"
        app:et_labelTextColor="#9e9e9e"
        app:et_labelTextSize="12sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <com.rey.material.widget.EditText
            android:id="@+id/emu3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:ems="10"
            android:hint="Emergency Contact 2"
            android:inputType="phone"
            android:maxLength="10"
            android:singleLine="true"
            android:textColor="#424242"
            android:textSize="21sp"
            app:et_dividerColor="#9e9e9e"
            app:et_dividerHeight="1dp"
            app:et_dividerPadding="2dp"
            app:et_labelEnable="true"
            app:et_labelTextColor="#9e9e9e"
            app:et_labelTextSize="12sp" />

            <ImageButton
                android:id="@+id/cont2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                android:background="@mipmap/conts" />

        </FrameLayout>


    </LinearLayout>

    <Button
        android:id="@+id/send"
        android:layout_width="130dp"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="55dp"
        android:layout_marginTop="40dp"
        android:background="#212121"
        android:drawableLeft="@mipmap/arrow"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="submit"
        android:textColor="#ffffff"
        android:textSize="22sp" />

</LinearLayout>